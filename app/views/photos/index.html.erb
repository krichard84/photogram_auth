<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/photos/new" class="btn btn-default btn-block">
      <i class="fa fa-plus"></i>
    </a>
    <hr>
  </div>
</div>

<% @photos.each do |the_photo| %>
<% @users.each do |the_user| %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            
            <a href="/users/<%= the_photo.user_id %>"> <%= the_user.username %>
            </a>
            
            <small>
               <%= time_ago_in_words(the_photo.created_at) %> ago
            </small>
            
          </h3>
        </div>  
        
          <div class="panel-body">
            <a href="/photos/<%= the_photo.id %>">
            <img src="<%= the_photo.image %>" class="img-responsive">
            </a>
            
            <p>
              
              <form action="/create_like" method="post">
                <!-- Hidden input for authenticity token to protect from forgery -->
                <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                
                <input type="hidden" name= "photo_id" value="<%= the_photo.id %>">

                <input type="hidden" name="user.id" value="<%=the_user.id %>">
                
                <button class="btn btn-link">
                <i class="fa fa-heart-o"></i>
                </button>
                <small class="text-muted">be the first to like this</small>
            </form>
            
            </p>
            
              <a href="/delete_like/ <%= the_photo.id %>" class="btn btn-link">
                <i class="fa fa-heart"></i>
              </a>
              
                <%= Like.where(:photo_id => the_photo.id).each do |the_like| %>
                
                <% end %>
            </p>
            
            <ul class="media-list">
              
            <% Comment.where(:photo_id => the_photo.id).each do |the_comment| %>
                
                <li class="media">
                  <div class="media-body">
                    <h6 class="media-heading">
                      <a href="users/<%= the_user.id %>"> <%= the_user.username %>
                      </a>
           
                         <small>
                           <%= time_ago_in_words(the_comment.created_at) %> ago
                         </small>
                    </h6>
                  </div>
                </li> 
                
                <li class="media">
                  <div class="media-body">
                    <form action="/create_comment" method="post">
                      <!-- Hidden input for authenticity token to protect from forgery -->
                        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                      
                        <input type="hidden" name="photo_id" value="<%= the_photo.id %>">
                        
                        <input type="hidden" name="user_id" value="<%= the_user.id %>">
                      
                        <!-- Label and input for body -->
                        <div class="form-group">
                          <label for="body" class="sr-only">
                            Body
                          </label>
                          
                          <div class="input-group">
                            <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required>
                            
                            <span class="input-group-btn">
                              <button class="btn btn-default" type="submit">
                                <i class="fa fa=commenting-o"></i>
                              </button>
                            </span>
                          </div>
                        </div>
                    </form>
                  </div>
                </li>
              <% end %>
            </ul>
          <div class="btn-group btn-group-justified">
              <a href="/photos" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>
              <a href="/photos/<%= the_photo.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
            <a href="/delete_photo/<%= the_photo.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>    
        </div>
      </div>
    </div>
  </div>  
 
<% end %>
<% end %>
